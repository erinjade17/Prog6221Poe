<Window x:Class="RecipeAppWPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptTextBlock" Text="Prompt" Margin="10"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
